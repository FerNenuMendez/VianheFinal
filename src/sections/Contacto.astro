<section id="contacto" class="pt-12">
  <div class="container-central">
    <h2 class="p-3 text-center m-3 poppins-strong text-4xl">Contactenos</h2>
    <section
      class="flex flex-col items-center justify-center w-full md:flex-row md:pb-10"
    >
      <div class="w-full md:w-1/3 px-8">
        <form class="flex flex-col">
          <div class="mb-3">
            <label
              for="exampleFormControlInput1"
              class="form-label font-semibold poppins-medium"
              >Ingrese su Email</label
            >
            <input
              type="email"
              class="form-control"
              id="exampleFormControlInput1"
              placeholder="name@example.com"
            />
          </div>
          <div class="mb-3">
            <label
              for="exampleFormControlTextarea1"
              class="form-label font-semibold poppins-medium"
              >Dejenos su consulta</label
            >
            <textarea
              class="form-control resize-none"
              id="exampleFormControlTextarea1"
              rows="10"></textarea>
          </div>
          <button type="submit" class="btn poppins-medium"
            >Enviar consulta</button
          >
        </form>
      </div>
      <div class="h-full flex flex-col items-center justify-center p-4">
        <div class="flex items-center justify-center">
          <img src="/mapa.png" alt="Icono de Mapa" class="max-h-10" />
          <p class="pt-4 pl-2 poppins-medium text-sm">
            Mateo Echegaray 4822 <br /> Caseros. Buenos Aires.
          </p>
        </div>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3283.1513730990137!2d-58.565330100000004!3d-34.625614799999994!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcb80604385809%3A0xeac204078398558b!2sCDD%2C%20Mateo%20Echegaray%204822%2C%20B1678%20Caseros%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses-419!2sar!4v1730263385393!5m2!1ses-419!2sar"
          width="350"
          height="360"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </section>
  </div>
</section>
<style>
  .btn {
    background-color: #b2b089;
    align-self: flex-center;
    color: white;
  }
</style>
